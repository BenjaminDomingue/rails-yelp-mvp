<div class="container text-center">


<h1><%= @restaurant.name %></h1><br>
<h3>Address: </h3>
<p><%= @restaurant.address %></p>
<h3>Phone number:</h3>
<p><%= @restaurant.phone_number %></p>
<h3>Category:</h3>
<p><%= @restaurant.category %></p>

<h3>List of Reviews</h3>

<%#= raise %>
<% @restaurant.reviews.each do |review| %>
<p><%=  review.content  %></p>
<p><%=  review.rating%></p>
<% end %>

<%= link_to "Back to the list", restaurants_path, class: "btn btn-primary flex-direction-column mr-2"%>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary flex-direction-column"%>

</div>


